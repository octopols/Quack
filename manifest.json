{
  "manifest_version": 3,
  "name": "Quack",
  "version": "3.0.0",
  "description": "Search through ALL comments on any YouTube video, including paginated comments",
  "author": "Hirnaymay Bhaskar",
  "homepage_url": "https://github.com/yourusername/quack",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "src/settings.js",
        "src/parser.js",
        "src/fetcher.js",
        "src/search.js",
        "src/ui.js",
        "src/content.js"
      ],
      "css": [
        "src/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Quack"
  },
  "minimum_chrome_version": "88",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
